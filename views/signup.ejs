<!DOCTYPE html>

<html>
  <head>
    <%- include('base/head.ejs') %>
    <link href="/css/signup.css" rel="stylesheet" />
  </head>

  <body style="background-color: ghostwhite">
    <div class="d-flex align-items-center min-vh-100">
      <div
        class="container"
        style="max-width: 640px; margin-top: 20px; margin-bottom: 150px"
      >
        <div class="card shadow my-3">
          <div class="card-body">
            <h2 class="text-center mb-3">Welcome!</h2>
            <form action="/signup" method="POST">
              <div class="form-group">
                <label for="id" class="font-weight-bold">아이디</label>
                <input
                  type="text"
                  class="form-control"
                  id="id"
                  name="id"
                  required
                />
              </div>
              <div class="form-group">
                <label for="pw" class="font-weight-bold">비밀번호</label>
                <input
                  type="password"
                  class="form-control"
                  id="pw"
                  name="pw"
                  required
                />
              </div>
              <div class="form-group">
                <label for="name" class="font-weight-bold">이름</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  required
                />
              </div>
              <div class="form-group">
                <label for="email" class="font-weight-bold">이메일</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  required
                />
              </div>
              <div class="form-group">
                <label for="phone" class="font-weight-bold">휴대폰 번호</label>
                <input
                  type="text"
                  class="form-control"
                  id="phone"
                  name="phone"
                  value=""
                  data-prev-value=""
                  required
                />
              </div>
              <div class="form-group">
                <label for="phone" class="font-weight-bold">IP</label>
                <input
                  type="text"
                  class="form-control"
                  id="ip"
                  name="ip"
                  value=""
                  data-prev-value=""
                  required
                />
              </div>
              <div class="form-group">
                <label for="branch" class="font-weight-bold">소속</label>
                <select class="form-control" id="branch" name="branch">
                  <option value="M01">공군</option>
                  <option value="M02">육군</option>
                  <option value="M03">해군</option>
                  <option value="M04">국직</option>
                </select>
              </div>
              <div class="form-group">
                <label for="team" class="font-weight-bold">부대</label>
                <select class="form-control" id="team" name="team">
                  <% data.teams.forEach((teams, index) => { %>
                  <option value="<%= teams.id %>"><%= teams.name %></option>
                  <% }); %>
                </select>
              </div>
              <div class="form-group">
                <label class="font-weight-bold">담당 시스템</label>
                <div>
                  <select
                    id="signup-systems-select"
                    class="d-none"
                    name="systems[]"
                    multiple="multiple"
                    style="width: 100%"
                  >
                    <% data.systems.forEach((system, index) => { %>
                    <option value="<%= system.id %>"><%= system.name %></option>
                    <% }); %>
                  </select>
                </div>
              </div>
              <div class="mt-5">
                <button
                  type="submit"
                  class="btn btn-success btn-block py-2 mt-4"
                >
                  회원가입
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include('base/footer.ejs') %> <%- include('base/script.ejs') %>
    <script src="/js/signup.js"></script>
  </body>
</html>
